{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<h1 class="mb-4">Changer le mot de passe</h1>
{% if erreur is defined %}
   <div style="color:red" class="col-12 mb-3">
    {{erreur}}
    </div>
{% endif %}

<form method="post" action="{{ path('change-password') }}" class="needs-validation" novalidate>
    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

    <div class="col-12 mb-3">
        {{ form_label(form.oldPassword, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.oldPassword, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <div class="col-12 mb-3">
        {{ form_label(form.newPassword, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.newPassword, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <div class="col-12 mb-3">
        {{ form_label(form.newPasswordConfirmation, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.newPasswordConfirmation, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.newPasswordConfirmation, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
    </div>

    {{ form_end(form) }}
</form>


{% endblock %}
